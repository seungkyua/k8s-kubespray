kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: monitoring
  namespace: {{ system_namespace }}
  labels: 
    name: monitoring-clusterrolebinding
subjects:
  - kind: ServiceAccount
    name: monitoring
    namespace: {{ system_namespace }}
roleRef:
  kind: ClusterRole
  name: cluster-admin
  apiGroup: rbac.authorization.k8s.io